{
    "version": "1.8.10",
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"]
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./test/**/*.ts",
        "./typings/index.d.ts",
        "./custom_typings/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "doc",
        "test",
        "config.js",
        "gulpfile.js",
        "karma.conf.js"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
